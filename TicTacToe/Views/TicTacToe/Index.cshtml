@{
    ViewData["Title"] = "TicTacToe";
}

<div class="container mt-5">

    <!-- Input for nickname -->
    <div id="lobby" class="container mt-5">
        <h1 class="text-center mb-4">Search for a game</h1>
        <div class="row justify-content-center">
            <div class="col-md-6"> 
                <input id="nickname" class="form-control form-control-sm p-2" placeholder="Enter your name to search for a game"> 
            </div>
            <div class="col-md-2 text-md-right"> 
                <button id="btnSearch" class="btn btn-secondary btn-block">Search</button>
            </div>
        </div>
    </div>

    <!-- List of players searching for a game -->
    <div id="rooms" class="mt-4">

    </div>
   

    @*3x3 tic tac toe field*@
     <div id="game" class="mt-5">
         <h1 id="markerInfo" class="text-center"></h1>
        <div id="info" class="text-center">
        </div>
        <div id="field" class="mt-4 text-center"></div>
    </div>

</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/ticTacToe.js"></script>